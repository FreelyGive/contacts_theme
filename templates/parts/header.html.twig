<header class="layout-header clearfix flex-container flex-container-rows">
  <div class="logo">
    {% if logo %}
      <a href="{{ front_page }}" title="{{ 'Home'|t }}" rel="home" id="logo">
        <img src="{{ logo }}" alt="{{ 'Home'|t }}" />
      </a>
    {% endif %}
  </div>
  <div class="branding-main flex-fill flex-container flex-container-rows">
    {% if header_image %}
      <div class="contacts-header-image">{{ header_image }}</div>
    {% endif %}
    <div class="flex-fill region--header">
      {{ page.header|without('contacts_theme_local_actions', 'contacts_theme_primary_tabs') }}
    </div>
    {{ page.header.contacts_theme_primary_tabs }}
    {{ page.header.contacts_theme_local_actions }}
  </div>
</header>
